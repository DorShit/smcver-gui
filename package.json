{
  "name": "smcver-gui",
  "displayName": "SMcVer GUI",
  "description": "Help developers use SMcVer",
  "version": "1.0.1",
  "publisher": "Dor Shitrit",
  "icon": "images/MainLogo.jpg",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.openItem",
    "onView:myTreeView"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "smcver-gui.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "smcverCEX.refreshEntry",
        "title": "Refresh",
        "icon": {
          "light": "images/refresh_light.svg",
          "dark": "images/refresh_dark.svg"
        }
      },
      {
        "command": "smcverCEX.editEntry",
        "title": "Counter Examples Location",
        "icon": {
          "light": "images/edit_light.svg",
          "dark": "images/edit_dark.svg"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "smcver",
          "title": "SMcVer",
          "icon": "images/debug.svg"
        }
      ]
    },
    "views": {
      "smcver": [
        {
          "id": "smcverFunctions",
          "name": "Functions"
        },
        {
          "id": "smcverCEX",
          "name": "Counter Examples"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "smcverCEX.refreshEntry",
          "when": "view == smcverCEX",
          "group": "navigation"
        },
        {
          "command": "smcverCEX.editEntry",
          "when": "view == smcverCEX ",
          "group": "navigation"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DorShit/smcver-gui.git"
  },  
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "python": "^0.0.4",
    "python-shell": "^5.0.0",
    "vsce": "^2.15.0"
  }
}